# Copy this file to .env and fill in your values. Do not commit .env to Git.

NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# MongoDB
MONGO_URI=mongodb+srv://USER:PASSWORD@cluster0.xxxxx.mongodb.net/DBNAME?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_here

# Admin email (for sending appointment emails)
ADMIN_EMAIL=your_email@gmail.com
ADMIN_EMAIL_APP_PASSWORD=your_gmail_app_password

# AI FAQ – use ONE of these (Groq is recommended, free, no card):
# Groq (recommended): https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
# Gemini: https://aistudio.google.com/apikey
# GEMINI_API_KEY=your_gemini_api_key_here
CLINIC_ADDRESS=Your clinic full address
CLINIC_HOURS=Mon–Fri 9am–6pm

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
